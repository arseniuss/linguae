<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="lv.id.arseniuss.linguae.app.Utilities" />

        <variable
            name="viewmodel"
            type="lv.id.arseniuss.linguae.app.viewmodel.SessionResultViewModel.TaskErrorViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_error"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="@{Utilities.GetTranslatedString(textView.getContext(), viewmodel.TaskType)}"
            tools:text="Task name" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@{viewmodel.GetResult()}"
            tools:text="Answer/answer" />

    </LinearLayout>

</layout>